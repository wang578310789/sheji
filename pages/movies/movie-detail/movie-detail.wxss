@import "../star/star-template";
.banner{
    width:100%;
    height:400rpx;
    filter: blur(2px);

}
.banner-content{
    display: flex;
    flex-direction: column;
    position: absolute;
    top:20px;
    left:20px;
}
.ls{
    color:#F21246;
    margin-right: 20rpx;
}
view{
    font-size: 26rpx;
}
.title{
    color:#fff;
    font-size: 40rpx;
}
.country{
    margin-top: 50rpx;
    color:#fff;
    margin-bottom: 50rpx;
}
.preview{
    width:200rpx;
    height:270rpx;
    position: absolute;
    right:20rpx;
    top:200rpx;
}
.content{
    display: flex;
    flex-direction: column;
    padding-left:20rpx;
    padding-right:20rpx;
}
.content-item{
    display: flex;
    align-items: center;
    margin-bottom: 25rpx;
}
.content-item>text:first-child{
    margin-right:20rpx;
    color:#999999;
}
.alt-color{
    color:#999;
}
.alt-title{
    padding-top: 50rpx;
    margin-bottom: 50rpx;
}
.line{
    width:100%;
    height:2rpx;
    background: #999;
    margin-top: 25px;
    margin-bottom: 25rpx;
}
.sum text{
    margin-top: 25rpx;
    line-height: 20px;
    text-indent: 20px;
}
.scroll image{
   
    
    width:170rpx;
    height:250rpx;
    padding-right:40rpx;
}
.scroll{
    white-space: nowrap;
    padding-left:20rpx;
    padding-right:20rpx;
}
.scroll view{
    display: inline-flex;
    flex-direction: column;
}
.scroll text{
    margin-top: 20px;
}
.casts{
    margin-bottom: 25rpx;
}
.average{
    margin-left: 15rpx;
}
.trailer{
    width: 200rpx;
    height: 90rpx;
    line-height: 90rpx;
    background-color: #aacf53;
    border: none;
    border-radius: 20px;
    position: relative;
    bottom: 130px;
    left: 100px;
    font-size: 30rpx;
}